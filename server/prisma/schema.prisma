generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  FINISHED
  IN_PROGRESS
  FREE
  EXPIRED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id Int @default(autoincrement()) @id
  title String
  status TaskStatus @default(FREE)
  priority TaskPriority
  deadline DateTime
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}